package com.cognizant.testing.BlackJack;
import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertFalse;
import static org.junit.Assert.assertTrue;
import static org.junit.Assert.fail;

import java.rmi.activation.ActivationException;
import org.junit.Test;
public class InvalidTests {
	BlackJack blackjack = new BlackJack();
	@Test
	public void invalid() {
		assertEquals(0,blackjack.play(0, 1));
		assertEquals(0,blackjack.play(40, 20));
		assertEquals(0,blackjack.play(1, 20));
		assertEquals(0,blackjack.play(21, 50));
		assertEquals(0,blackjack.play(41, 60));
	}

}
